{
  "name": "chat-app-client",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prebuild": "yarn clean",
    "build": "react-scripts build",
    "clean": "rimraf build",
    "lint": "eslint \"**/*.{js,jsx,ts,tsx}\" --cache",
    "lint:fix": "yarn lint --fix",
    "serve:build": "yarn build && serve -s build -l 4000",
    "serve:coverage": "yarn test:coverage && serve -s ./coverage -l 4001",
    "start": "react-scripts start",
    "test": "react-scripts test --watchAll=false --passWithNoTests --json --outputFile=./src/jest-test-results.json",
    "test:coverage": "yarn test --coverage",
    "test:watch": "react-scripts test",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "typescript": "^4.1.2",
    "web-vitals": "^1.0.1"
  }
}
